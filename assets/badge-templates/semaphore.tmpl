<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="{{.TotalWidth}}" height="20">
	<clipPath id="a">
		<rect width="{{.TotalWidth}}" height="20" rx="2"/>
	</clipPath>
	<g clip-path="url(#a)">
		<path fill="#f1f1f1" d="M0 0h{{.SubjectWidth}}v20H0z"/>
		<path fill="{{.Color}}" d="M{{.SubjectWidth}} 0h{{.StatusWidth}}v20H{{.SubjectWidth}}z"/>
	</g>
	<g font-family="Verdana,sans-serif" font-size="90">
		<text fill="#888" x="{{.SubjectTextOffset}}" transform="scale(.1)" y="130" textLength="{{.SubjectTextWidth}}">{{.Subject}}</text>
		<text fill="#fff" x="{{.StatusTextOffset}}" transform="scale(.1)" y="130" textLength="{{.StatusTextWidth}}">{{.Status}}</text>
	</g>
</svg>
